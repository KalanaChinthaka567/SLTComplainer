<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#42C5C2" />
            <gradient android:angle="-90" android:startColor="#42C5C2" android:endColor="#42C5C2"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#42C5C2" />
            <solid android:color="#42C5C2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#42C5C2" />
            <gradient android:angle="-90" android:startColor="#42C5C2"
                android:endColor="#42C5C2" />
        </shape>
    </item>
</selector>